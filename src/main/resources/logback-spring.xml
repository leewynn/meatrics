<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define log file properties -->
    <property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}/}meatrics.log}"/>
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/meatrics.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <!-- Rolling policy - size and time based -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>${LOG_PATH}/meatrics-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- Each file should be at most 10MB -->
            <maxFileSize>10MB</maxFileSize>
            <!-- Keep 30 days worth of history -->
            <maxHistory>30</maxHistory>
            <!-- Total size of all archive files, if total size > 1GB, oldest archives deleted -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Error File Appender - separate file for errors -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/meatrics-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/meatrics-error-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Application loggers -->
    <logger name="com.meatrics" level="INFO"/>

    <!-- Spring Boot loggers -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.boot" level="INFO"/>

    <!-- Database loggers -->
    <logger name="org.jooq" level="INFO"/>
    <logger name="org.postgresql" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="liquibase" level="INFO"/>

    <!-- Vaadin loggers -->
    <logger name="com.vaadin" level="INFO"/>
    <logger name="org.atmosphere" level="WARN"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

    <!-- Profile-specific configurations -->
    <springProfile name="dev,development">
        <!-- In development, show more detailed logs -->
        <logger name="com.meatrics" level="DEBUG"/>
        <logger name="org.jooq" level="DEBUG"/>
    </springProfile>

    <springProfile name="prod,production">
        <!-- In production, log less to console, more to file -->
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>
</configuration>
