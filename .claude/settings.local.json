{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:vaadin.com)",
      "Bash(git -C /mnt/d/dev/meatrics log --oneline -10)",
      "Bash(python3:*)",
      "Bash(pip3 install:*)",
      "Bash(pip install:*)",
      "Bash(java -version:*)",
      "Bash(chmod:*)",
      "WebFetch(domain:www.jooq.org)",
      "Bash(gemini:*)",
      "WebFetch(domain:dev.to)",
      "Bash(find:*)",
      "Task(subagent_type:vaadin-jooq-spring-expert)",
      "Task(subagent_type:documentation-agent)",
      "Task(subagent_type:Explore)",
      "Task(subagent_type:Plan)",
      "Task(subagent_type:general-purpose)",
      "Bash(xargs:*)",
      "Bash(done)",
      "Bash(jar -tf:*)",
      "Bash(cat:*)",
      "Bash(unzip:*)",
      "Bash(zipinfo:*)",
      "WebFetch(domain:www.basiq.io)",
      "WebFetch(domain:developer.xero.com)"
    ],
    "deny": [
      "Bash(mvn:*)"
    ],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$ARGUMENTS\" | grep -q '\"command\":.*\"mvn'; then echo 'ERROR: Maven commands are disabled. User will compile manually.' >&2; exit 1; fi"
          }
        ]
      }
    ]
  }
}
